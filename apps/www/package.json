{
  "name": "@galleo/www",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun with-env bun run dev:node",
    "dev:node": "next dev --port 6969",
    "dev:cloudflare": "bun x dotenvx decrypt -f ../../.env  --stdout > .dev.vars && wrangler dev --port 8771",
    "build": "pnpm with-env pnpm run build:node",
    "build:node": "next build",
    "build:cloudflare": "opennextjs-cloudflare",
    "with-env": "dotenvx run -f ../../.env --",
    "start": "pnpm with-env pnpm run next start",
    "clean": "git clean -xdf .turbo node_modules .next .cache",
    "lint": "bun x @biomejs/biome lint . --write",
    "format": "bun x @biomejs/biome format . --write",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "dependencies": {
    "@galleo/db": "workspace:*",
    "@galleo/schema": "workspace:*",
    "@galleo/ui": "workspace:*",
    "@tanstack/react-query": "catalog:react-query",
    "@tanstack/react-query-devtools": "catalog:react-query",
    "effect": "^3.12.7",
    "framer-motion": "^12.0.6",
    "next": "15.1.6",
    "posthog-js": "^1.215.1",
    "react": "catalog:react19",
    "react-dom": "catalog:react19"
  },
  "devDependencies": {
    "@galleo/typescript": "workspace:*",
    "@types/node": "catalog:",
    "@types/react": "catalog:react19",
    "@types/react-dom": "catalog:react19",
    "jiti": "^2.4.1",
    "tailwindcss": "catalog:",
    "typescript": "catalog:"
  }
}
